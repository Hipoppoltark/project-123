<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
<script type="text/javascript">
  $(function(){
      var flag = true;
      $('.registr').on('click', function(e){
        e.preventDefault();

        if (flag) {
          flag = false;
          $('.register').show('slow');
          $('.form-signin').hide();
        } else{
          flag = true;
          $('.form-signin').show('slow');
          $('.register').hide();
        }
      });
      $('.registerb').on('click', function(e){
        e.preventDefault();
        var data = {
          inputEmail: $('#inputEmail').val(),
          inputPassword: $('#inputPassword').val(),
          inputPasswordConfirm: $('#inputPasswordConfirm').val()
        };
        $.ajax({
          type: 'POST',
          data: JSON.stringify(data),
          concentType: 'application/json',
          url: '/api/auth/register'
        }).done(function(data){
          console.log(data);
        });
      });

    });
</script>
